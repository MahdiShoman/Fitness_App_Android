<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34495E"
    android:orientation="vertical"


    tools:context=".ActivityDetails">

    <Button
        android:id="@+id/timaer_activity_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/activity_details_imageView"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        app:srcCompat="@drawable/img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_details_textView_name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#FDFEFE"

                android:textSize="30sp" />

            <TextView
                android:id="@+id/activity_details_textView_time"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#FDFEFE"

                android:textSize="30sp" />

            <TextView
                android:id="@+id/activity_details_textView_avtivityDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textColor="#FDFEFE"

                android:textSize="20sp" />

            <Button
                android:id="@+id/activity_details_button"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Start Activity"
                android:textColor="#FDFEFE"

                android:textSize="28sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>